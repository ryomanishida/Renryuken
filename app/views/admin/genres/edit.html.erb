<h1><%= @genre.name %>の詳細</h1>
<%= form_with model: @genre, local: true do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "変更保存" %>
<% end %>
<%= link_to 'ジャンル削除', genre_path(@genre), method: :delete,  class: "btn btn-danger"%>
